.cart-total{
  margin-top:5rpx;
  background:#fff;
  display: flex;
  justify-content: space-between;
  padding:10rpx 20rpx;
  border-bottom:1px solid #eeeeee;
}
.cart-total-price{
  display: flex;
  flex-direction: column;
  text-align: right;
}
.cart-total .p-save{
  color:#959595;
  font-size:12px;
  margin:10rpx 0;
}
.cart-total .p-delivery{
  font-size:13px;
  color:#ea8126;
}
.buy{
  font-size:14px;
  border-top:1px solid #e5e5e5;
  position: fixed;
  bottom:0;
  width:100%;
  height:110rpx;
  background:#fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.all-total{
  display: flex;
  flex-direction: column;
  margin-left:20rpx;
}
.all-total .all-d{
  color:#ea8126;
  font-size:12px;
  margin-top:5rpx;
}
.buy-btn{
  margin-right:2rpx;
  width:200rpx;
  background:#63cacd;
  height:100rpx;
  font-size:17px;
  text-align: center;
  line-height: 100rpx;
  color:#fff;
  border-radius: 10rpx;
}
.empty-cart{
  text-align: center;
  padding-top:70rpx;
}
.empty-cart .empty-img-box{
  background:#fff;
  border-radius: 50%;
  width:270rpx;
  height:270rpx;
  margin:0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom:30rpx;
}
.empty-cart .empty-img{
  width:190rpx;
  height:190rpx;
}
.empty-cart .empty-title{
  color:#959595;
}
.delete{
  font-size:12px;
  color:#e63e42;
  position:absolute;
  bottom:0;
  left:48%;
}