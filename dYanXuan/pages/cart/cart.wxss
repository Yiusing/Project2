/* pages/cart/cart.wxss */
.main{
  background:#f7f7f7;
  font-size:14px;
  padding-bottom:110rpx;
}

.headline{
  background:#fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:15rpx 20rpx;
}
.headline-title{
  color:#626262;
  position: relative;
  display: flex;
  align-items: center;
  
}
.headline-title .selectAll-box{
  width:36rpx;
  height: 36rpx;
}
.headline-title .select-All{
  width:35rpx;
  height: 35rpx;
  border:1px solid #b4b4b4;
  border-radius: 50%;
}
.headline-title .headline-title-content{
  margin-left:15rpx;
}
.headline .others{
  color:#e63e42;
}
.cart-box{
  margin-top:5rpx;
  background:#fff;
}
.select-box{
  width:19px;
  position: relative;
}
.selectAll-box{
  position: relative;
}
.selectAll-box .select-icon{
  width:20px;
  height:20px;
}
.select-box .mask ,.selectAll-box .mask{
  position: absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
  background:transparent;
}
.select-icon{
  border:1px solid #b4b4b4;
  border-radius: 50%;
  width:18px;
  height:18px;
  box-sizing: border-box;
}
.select-icon.sel{
  border:none;
}
.cart-item{
  padding:10rpx 20rpx;
  display: flex;
  align-items: center;
}
.pdu-img{
  width:230rpx;
  height:200rpx;
}
.pdu-detials{
  display: flex;
  flex-direction: column;
  position: relative;
  flex:1;
}
.pdu-detials .pdu-spec{
  color:#959595;
  font-size:12px;
  margin-top:10rpx;
}
.pdu-detials .price{
  margin-top:20rpx;
  font-size:12px;
}
.pdu-detials .price .dis-price{
  color:#e63e42;
}
.pdu-detials .price .ori-price{
  text-decoration: line-through;
  color:#959595;
  margin-left:15rpx;
  font-size:11px;
}
.pdu-detials .add{
  position: absolute;
  right:0;
  bottom:0;
}
