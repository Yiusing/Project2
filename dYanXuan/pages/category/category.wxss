
.aside-nav{
  height:100vh;
  width:180rpx;
  background:#f7f7f7;
  border:1px solid #fff;
  box-shadow: 0 0 0 1px #f7f7f7;
  position: fixed;
  left:0;
  top:0;
  }
.nav-item{
  padding:25rpx 35rpx;
  font-size:14px;
  color:#787878;
}
.nav-item.active{
  color: #de496c;
  position: relative;
  background:#fff;
}
.nav-item.active::after{
  display: inline-block;
  content: "";
  position: absolute;
  width:12rpx;
  height:12rpx;
  border-radius: 50%;
  background:#de496c;
  left:14rpx;
  top:40rpx;
}
.category{
  width:70%;
  float: right;
  padding:0 25rpx;
}
.category-banner{
  text-align: center;
  padding:20rpx 0;
}
.category-banner image{
  width:100%;
  height:186rpx;
}
.category-items{
  display: flex;
  flex-wrap: wrap;
}
.category-item{
  width:33.33333333%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom:20rpx;
}
.category-item image{
  width:150rpx;
  height:150rpx;
}
.category-item-title{
  font-size:13px;
  color:#787878;
  text-align: center;
}
.category-headline{
  border-bottom:1px solid #f7f7f7;
  padding-bottom:10rpx;
}
.category-headline-title{
  font-size:15px;
  font-weight:600;
}
